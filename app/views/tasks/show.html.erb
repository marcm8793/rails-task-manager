<h1>Task: <%=@task.title %> </h1>


<p><%= @task.details %></p>
<%= form_for @task do |f| %>
  <%= f.check_box :completed %>
  <%= f.submit "Update" %>
<% end %>



<%= link_to "Back to tasks", tasks_path %>
<%= link_to "Edit", edit_task_path(@task)%>
<%= link_to "Delete", task_path(@task), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
