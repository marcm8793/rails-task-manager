<div class="container d-flex">
  <div class="row">
    <div class="col">
<%= form_with model: @task do |f| %>
  <% unless @task.new_record? %>
    <%= f.label :completed %>
    <%= f.check_box :completed %>
    <br>
  <% end %>
  <div class="field">
  <%= f.label :title %>
  <%= f.text_field :title, class:"form-control mb-2 mr-sm-2 mb-sm-0"%>
  </div>
  <br>
  <div class="field">
  <%= f.label :details %>
  <%= f.text_area :details, class:"form-control mb-2 mr-sm-2 mb-sm-0"%>
  <br>
  </div>
  <%= f.submit %>
<% end %>
    </div>
  </div>
</div>
